@page "/todo"

<PageTitle>Todo List</PageTitle>
<h3>Todays Todos @todos.Count(todo => !todo.IsDone)</h3>
<div class="col m-3" style="background-color:coral"><hr /><hr />
<ul>
	@foreach(var todo in todos)
	{
		<input type='checkbox' @bind="todo.IsDone" />
		<input @bind="todo.Title"/><hr />
	}
</ul>
</div>
<input placeholder="Morning todo" @bind="newTodo"/><br /><br />
<button class="btn-dark" @onclick="AddTodo">Add</button>

@code {
	private List<TodoItem> todos = new();

	private string? newTodo;

	private void AddTodo()
	{
		if (!string.IsNullOrWhiteSpace(newTodo))
		{
			todos.Add(new TodoItem{Title = newTodo});
			newTodo = string.Empty;
		}
	}
}
